{
    "name": "hardpixel/composer-janitor",
    "type": "composer-plugin",
    "description": "A composer cleanup plugin, to remove tests and documentation to save space",
    "license": "MIT",
    "authors": [
        {
            "name": "Hardpixel",
            "email": "info@hardpixel.eu"
        }
    ],

    "require": {
        "composer-plugin-api": "^1.0"
    },

    "autoload": {
        "psr-4": {
            "Hardpixel\\Composer\\Janitor\\": "src"
        }
    },
    "extra": {
        "branch-alias": {
            "dev-master": "1.x-dev"
        },
        "class": "Hardpixel\\Composer\\Janitor\\Plugin"
    }
}
